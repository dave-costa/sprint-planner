generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String        @id @default(uuid())
  name              String
  email             String
  password          String
  pictureFromGoogle String
  activePlan        String
  maxUsersInPlan    Int
  sprints           Sprint[]      @relation("OwnerSprints")
  participants      Participant[]
}

model Sprint {
  id              String        @id @default(uuid())
  name            String
  durationWeeks   Int
  ownerID         String
  sequencie       String
  realPoints      Int?
  estimatedPoints Int?
  owner           User          @relation("OwnerSprints", fields: [ownerID], references: [id])
  tasks           Task[]
  participants    Participant[]
}

model Task {
  id           String        @id @default(uuid())
  name         String
  voted        Boolean // O status
  description  String?
  pointsVoted  Int?
  sprintId     String
  sprint       Sprint        @relation(fields: [sprintId], references: [id])
  participants Participant[]
  reports      Report[]
}

model Participant {
  id       String @id @default(uuid())
  userId   String
  points   Int
  taskId   String
  sprintId String
  user     User   @relation(fields: [userId], references: [id])
  task     Task   @relation(fields: [taskId], references: [id])
  sprint   Sprint @relation(fields: [sprintId], references: [id])
}

model Report {
  id       String @id @default(uuid())
  taskId   String
  analysis String
  task     Task   @relation(fields: [taskId], references: [id])
}
